    "postcss": "^8.4.5",
    "postcss-import": "~14.1.0",
    "postcss-preset-env": "~7.5.0",
    "postcss-url": "~10.1.3",
    "prettier": "3.1.0",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "typescript": "5.8.3"
  },
  "overrides": {
    "@jscutlery/semver": {
      "@nx/devkit": "21.2.0-beta.5"
    }
  },
  "workspaces": [
    "query/**",
    "devtools/**"
  ],
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{ts,json,html,tsx}": "prettier --write"
  }
}
